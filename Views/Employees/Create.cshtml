@model EntityFrameWorkWithSQLServerConnected.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h3 style="color: red; text-align: center; background-color: antiquewhite;">Add Data About Employees</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<div class="form-row"></div>*@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salery" class="control-label"></label>
                <input asp-for="Salery" class="form-control" />
                <span asp-validation-for="Salery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"style="border-radius:15px;" />
                <a asp-action="Index" class="btn btn-outline-success" style="border-radius:15px;">Back to List</a>
            </div>
        </form>
    </div>

   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
